<%- contentFor('links') %>
<link rel="stylesheet" href="/css/facile.css">
<script src="/js/facile.js"></script>

<%- contentFor('body') %>

<div class="modal fade" id="atualizar" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Atualizar</h5>
              <button type="button" class="btn btn-sm sair" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="nameAt">Mensagem:</label>
                        <input id="nameAt" type="text" class="form-control" placeholder="Digite a Mensagem" autocomplete="off">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary btn-salvar" codigo="">Salvar</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-xl-4">
        <div class="card">
            <div class="card-body">
                <h3 class="mb-3">Cadastrar</h3>

                <div class="mt-3">
                    <div class="form-group">
                        <label>Mensagem:</label>
                        <input type="text" class="form-control name" required placeholder="Digite a Mensagem"/>
                    </div>
                </div>

                <div style="text-align: right;">
                    <button class="btn btn-primary btn-cadastrar" title="Cadastrar a Mensagem">Cadastrar</button>
                </div>
            </div>
        </div>                            
    </div>
    
    <div class="col-md-12 col-xl-8 listaFacile"></div>
    
</div>

<a class="scroll-to-top" href="javascript:void(0)"><span class="fa fa-angle-up"></span></a>